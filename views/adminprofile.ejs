<section class="section-user-table">
  <div class="container">
    <div class="row search-area">
      <h4 class="text-center" style="margin-bottom:20px;">Search Area</h4>
      <div class="col-md-4">
        <select class="form-control search-by" name="">
          <option value="name">Name</option>
          <option value="dept">Depatment</option>
          <option value="email">Email</option>
          <option value="mobile_no">Mobile No.</option>
        </select>
      </div>
      <div class="col-md-3">
        <input type="text" name="search-input" placeholder="Search here" class="form-control">
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>Dept.</th>
          <th>Live/Offline</th>
          <th>Type</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="user-tbody">
      </tbody>
    </table>
