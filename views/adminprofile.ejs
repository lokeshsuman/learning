    <div class="row">
      <div class="col-md-3">
        <button type="button" class="btn btn-primary" style="width:110px;">Employees <span class="badge emp-counter allEmp-count"></span></button>
      </div>
      <div class="col-md-3">
        <button type="button" class="btn btn-success" style="width:110px;">Live <span class="badge emp-counter emp-live"></span></button>
      </div>
      <div class="col-md-3">
